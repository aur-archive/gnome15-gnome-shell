post_install() {
    gtk-update-icon-cache -q -f /usr/share/icons/gnome

    echo "  >> Do not forget to enable the Logitech Keyboard gnome-shell extension"
}

post_upgrade() {
    gtk-update-icon-cache -q -f /usr/share/icons/gnome
}

post_remove() {
    gtk-update-icon-cache -q -f /usr/share/icons/gnome
}
